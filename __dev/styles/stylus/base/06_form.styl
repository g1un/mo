.form
	display table
	width 100%
	&-row
		display table-row
	&-label
		display table-cell
		vertical-align middle
		padding-right 30px
		padding-bottom 9px
		min-width 140px
		label
			display inline-block
			vertical-align middle
			font-size 14px
			color #666
	&-control
		display table-cell
		vertical-align middle
		padding-bottom 9px
		width 100%
		input
			display block
			width 100%
			padding 7px 9px 8px
			border-radius 4px
			border 1px solid #ccc
			box-shadow inset 0 1px 3px 0 rgba(0,0,0,.12)
			font-size 14px
			color #666
