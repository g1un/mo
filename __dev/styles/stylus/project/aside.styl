.aside
	padding 8px 9px
	box-shadow 0 0 10px 0 rgba(77,38,0,.25)
	&-nav
		margin-bottom 34px
		&-item
			margin-bottom 3px
			&:last-child
				margin-bottom 0
		&-link
			display block
			padding 0 5px 0 19px
			border-radius 3px
			border 1px solid #469352
			outline none
			box-shadow 1px 1px 2px 0 rgba(51,51,51,.75)
			background #449150
			background linear-gradient(to top, #449150, #449150 49%, #70b07a 54%, #70b07a)
			font-open-sans-reg()
			font-size 15px
			line-height 44px
			color #fff
			text-decoration none
			text-align left
			text-shadow 1px 1px 1px #000
			&:hover
				border-color #7ebe89
				background #70b07a
				background linear-gradient(to top, #80c28b, #80c28b 49%, #c0e6c6 54%, #c0e6c6)
				color #000
				text-shadow 1px 1px 1px #fff
			&.__active
				border-color #d60f0f
				background images('background/aside-nav-bg.png') repeat-x 0 0
				position relative
				&:before
					content ''
					position absolute
					top -1px
					right -16px
					sprite(aside-nav-triangle)
	&-form
		position relative
		margin-bottom 30px
		&:before
			content ''
			position absolute
			top 50%
			right 8px
			sprite(search-red)
			margin-top -8px
			pointer-events none
			z-index 1
		&-search
			width 100%
			box-shadow inset 3px 3px 1px 0 rgba(0,0,0,.05)
			border none
			outline none
			background linear-gradient(to bottom, #f7f7f7, #fff)
			padding 0 43px 0 12px
			font-size 14px
			line-height 30px
			color #ccc
			font-style italic
			placeholder(1, #ccc)
		&-submit[type="submit"]
			position absolute
			top 0
			bottom 0
			right 0
			width 31px
			background #f3e5cc
			border none
			outline none
			border-radius 2px
			font-size 0
	&-menu
		&-title
			background linear-gradient(to top, #f7f4ef, #fcfcfc)
			margin-bottom 20px
			font-open-sans-reg()
			font-size 15px
			line-height 44px
			color #333
			text-transform uppercase
			padding 0 23px
		&-item
			padding 9px 22px 3px
			&:hover
				background #f7f4f0
				a
					border-color transparent
		&-link
			display inline-block
			vertical-align top
			font-open-sans-reg()
			font-size 14px
			line-height 1em
			color #559c61
			text-decoration none
			border-bottom 1px dashed #559c61

/*aside-profile*/
.aside
	&-calendar
		margin-top 45px
		position relative
		&:before,
		&:after
			content ''
			position absolute
			height 2px
			border-bottom 1px solid #b6b6b6
			border-right 1px solid #b6b6b6
			border-left 1px solid #b6b6b6
			border-radius 4px
		&:before
			bottom -2px
			left 3px
			right 3px
		&:after
			bottom -4px
			left 6px
			right 6px
		.ui-datepicker
			width auto
			padding 0
			border none
			border-right 1px solid #b6b6b6
			border-bottom 1px solid #b6b6b6
			border-radius 4px
			.ui-datepicker-header
				padding 0
			.ui-datepicker-prev,
			.ui-datepicker-next
				display block
				width auto
				height auto
				top 5px
				border-radius 4px
				box-shadow inset 1px 1px 2px 0 #896f55
				padding 3px
				cursor pointer
				span
					position relative
					top auto
					bottom auto
					left auto
					right auto
					margin 0
					background #dc0000
					border-radius 2px
					box-shadow 1px 1px 0 0 #80654a
					&:before
						content ''
						position absolute
						top 50%
						margin-top -3px
						width 0
						height 0
						border-top 3px solid transparent
						border-bottom 3px solid transparent
						filter: drop-shadow(0 -1px 0 rgba(0,0,0,.75))
			.ui-datepicker-prev
				left 5px
				span
					&:before
						left 50%
						margin-left -2px
						border-right 3px solid #fff
			.ui-datepicker-next
				right 5px
				span
					&:before
						right 50%
						margin-right -2px
						border-left 3px solid #fff
		.ui-widget-header
			background #c8a179;
			background linear-gradient(to top, #ba8e64, #d0af8b);
			box-shadow 1px 1px 0 0 rgba(0,0,0,.6)
			border none
			border-radius 3px 3px 0 0
			position relative
			&:before
			&:after
				content ''
				position absolute
				top -13px
				sprite(calendar-ring)
			&:before
				left 42px
			&:after
				right 42px
		.ui-datepicker-title
			font-tahoma()
			font-size 13px
			line-height 32px
			color #fff
			font-weight 700
			text-shadow 0 -1px 0 rgba(0,0,0,.35)
		.ui-datepicker-calendar
			thead
				background #f7f4f0
				border-bottom 1px solid #f1ebe5
		.ui-datepicker
			th
				font-tahoma()
				font-size 12px
				color #2b2d30
				font-weight 700
				&.ui-datepicker-week-end
					color #990000
			td
				padding 0
		.ui-state-default,
		.ui-widget-content .ui-state-default
			padding 0
			border-color transparent
			font-tahoma()
			line-height 22px
			color #2b2d30
			text-align center
		.ui-state-disabled .ui-state-default,
		.ui-widget-content .ui-state-disabled,
		.ui-state-default
			opacity 1
			color #9498a1
			background #fdfcfb
		.ui-state-active,
		.ui-widget-content .ui-state-active
			background #f0e1c9
		.ui-state-highlight,
		.ui-widget-content .ui-state-highlight
			font-weight 700
			color #cc0000
			background #fdfcfb
		.ui-state-highlight.ui-state-active,
		.ui-widget-content .ui-state-highlight.ui-state-active
			font-weight 700
			color #cc0000
			background #f0e1c9
		.ui-datepicker-week-end .ui-state-default
			background #f7f4f0
			border 1px solid #f1ebe5
		.ui-datepicker-week-end .ui-state-active
			background #f0e1c9
			border 1px solid #f1ebe5
