.comments
	padding 7px 24px 20px 6px
	&-item
		margin-bottom 4px
		border-radius 12px
		background #fbfaf6
		padding 11px 19px
		font-size 13px
		color #666
		&:last-child
			margin-bottom: 0
		&._left
			margin-left 75px
		&:after
			content ''
			display table
			clear both
	&-img
		float left
		margin-right 13px
		max-width 49px
		max-height 49px
	&-name
		display inline-block
		vertical-align top
		font-size 13px
	&-date
		display inline-block
		vertical-align top
		font-size 11px
	&-text
		font-size 13px
		color #333
