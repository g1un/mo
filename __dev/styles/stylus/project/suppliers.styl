.suppliers
	border-top 7px solid #c8a179
	padding 0 15px
	&-alert
		padding 20px 8px 17px
		box-shadow 0 10px 20px -10px rgba(77,38,0,0.12);
		font-open-sans-reg()
		font-size 14px
		color #333
		text-align right
		b
			font-open-sans-bold()
		.red
			color #ec3028
	&-list
		&-head
			padding-left 155px
			font-size 14px
			line-height 34px
			color #987552
		&-title
			display inline-block
			vertical-align top
			&:nth-child(1)
				width 317px
	&-item
		background linear-gradient(to top, #f7f4ef, #fcfcfc)
		border 1px solid #e1d6cb
		border-radius 5px
		padding 7px 13px 9px 7px
		margin-bottom 5px
		&:last-child
			margin-bottom 0
	&-logo
		display inline-block
		vertical-align middle
		width 134px
		height 137px
		box-sizing border-box
		border 1px solid #e1d6cb
		border-radius 2px
		background #fff
		font-size 0
		text-align center
		&:before
			content ''
			display inline-block
			vertical-align middle
			height 100%
		img
			max-width 100%
			display inline-block
			vertical-align middle
	&-info
		padding 17px 0 0 8px
		display inline-block
		vertical-align top
		width 322px
		box-sizing border-box
	&-name
		display inline-block
		vertical-align middle
		margin-bottom 10px
		font-open-sans-bold()
		font-size 20px
		color #000
		text-transform uppercase
		border-bottom 1px solid
	&-cuisine
		margin-bottom 10px
		font-size 14px
		color #666
	&-pay
		font-size 14px
		color #666
		&-cash
			margin-left 41px
			margin-right 13px
		span
			color #000
			&.on
				position relative
				padding-left 19px
				&:before
					content ''
					position absolute
					top 5px
					left 0
					width 13px
					height 7px
					border-bottom 3px solid #559c61
					border-left 3px solid #559c61
					transform: rotate(-45deg)
	&-price
		display inline-block
		vertical-align middle
		width 143px
		font-size 22px
		text-align center
	&-menu
		display inline-block
		vertical-align middle
		margin-left 16px
		text-align center
		&-btn[type='button']
			width 144px
			padding 0 10px 0 61px
			font-open-sans-reg()
			font-size 18px
			line-height 32px
			color #333
			border 1px solid #7ebe89
			border-radius 3px
			background linear-gradient(to top, #80c28b, #80c28b 49%, #9ad5a4 54%, #9ad5a4)
			box-shadow 1px 1px 1px 0 rgba(51,51,51,.75)
			text-shadow 1px 1px 1px #fff
			position relative
			&:before
				content ''
				position absolute
				top 7px
				left 22px
				sprite(cutlery-yellow)
			&:hover
				border 1px solid #469352
				background linear-gradient(to top, #449150, #449150 49%, #70b07a 54%, #98dba3)
				color #fff
				text-shadow 1px 1px 1px #000
				span
					border-color transparent
			span
				display inline-block
				vertical-align middle
				line-height 1em
				border-bottom 1px dashed #333
		&-table
			display none
			padding-bottom 40px
			&.__show
				display block
		&-head
			margin-bottom 25px
			padding 25px 0 12px
			border-bottom 1px solid #f0eae5
			font-size 0
		&-title
			display inline-block
			vertical-align top
			width 60%
			padding 0 30px
			font-open-sans-reg()
			font-size 16px
			color #cc0000
			b
				font-open-sans-bold()
			.calendar
				display inline-block
				vertical-align top
				margin-left 10px
				sprite(calendar-green)
		&-price
			display inline-block
			vertical-align top
			width 14%
			font-size 14px
			color #987552
			text-align center
		&-close
			display inline-block
			vertical-align top
			width 26%
			padding-right 42px
			text-align right
			&.__down
				display block
				float right
				width auto
				margin-top 10px
			a
				display inline-block
				vertical-align top
				font-open-sans-reg()
				font-size 14px
				color #559c61
				text-decoration none
				border-bottom 1px dashed #559c61
				position relative
				&:before
					content ''
					position absolute
					top 5px
					right -12px
					sprite(arrow-up-green)
				&:hover
					border-color transparent
		&-content
			padding-bottom 25px
			&.__complex
				padding-bottom 7px
				border-bottom 1px solid #f7f4f0
				&>ul
					&>li
						margin-bottom 5px
			h3
				margin 0 0 15px
				padding 0 10px
				background #f7f4f0
				font-open-sans-semibold()
				font-size 18px
				line-height 30px
				color #000
				font-weight 400
			&>ul
				&>li
					padding-left 45px
					font-size 0
					&:last-child
						margin-bottom 0
					&>.title
						width 58%
			li
				margin-bottom 12px
			.title
				display inline-block
				vertical-align top
				padding-left 10px
				font-open-sans-reg()
				font-size 16px
				color #333
				span
					display block
					font-open-sans-reg()
					font-size 14px
					color #999
			.price
				display inline-block
				vertical-align top
				width 14%
				font-open-sans-reg()
				font-size 16px
				color #000
				text-align center
		&-complex
			display block
			padding 5px 10px
			background #fbfaf6
			font-size 0
			&:hover
				background transparent
				.title
					color #559c61
					i
						border-color transparent
			&.__clicked
				.title
					i
						border-color transparent
			.title
				width 58%
				padding 0
				i
					font-style normal
					border-bottom 1px dashed #333
	&-complex-content
		display none
		margin-top 5px
		padding-left 40px
		&.__show
			display block