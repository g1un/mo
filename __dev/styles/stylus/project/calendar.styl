.calendar
	max-width 206px
	position relative
	&:before,
	&:after
		content ''
		position absolute
		height 2px
		border-bottom 1px solid #b6b6b6
		border-right 1px solid #b6b6b6
		border-left 1px solid #b6b6b6
		border-radius 4px
	&:before
		bottom -2px
		left 3px
		right 3px
	&:after
		bottom -4px
		left 6px
		right 6px
	.ui-datepicker
		width auto
		padding 0
		border none
		border-right 1px solid #b6b6b6
		border-bottom 1px solid #b6b6b6
		border-radius 4px
		.ui-datepicker-header
			padding 0
		.ui-datepicker-prev,
		.ui-datepicker-next
			display block
			width auto
			height auto
			top 5px
			border-radius 4px
			box-shadow inset 1px 1px 2px 0 #896f55
			padding 3px
			cursor pointer
			span
				position relative
				top auto
				bottom auto
				left auto
				right auto
				margin 0
				background #dc0000
				border-radius 2px
				box-shadow 1px 1px 0 0 #80654a
				&:before
					content ''
					position absolute
					top 50%
					margin-top -3px
					width 0
					height 0
					border-top 3px solid transparent
					border-bottom 3px solid transparent
					filter drop-shadow(0 -1px 0 rgba(0,0,0,.75))
		.ui-datepicker-prev
			left 5px
			span
				&:before
					left 50%
					margin-left -2px
					border-right 3px solid #fff
		.ui-datepicker-next
			right 5px
			span
				&:before
					right 50%
					margin-right -2px
					border-left 3px solid #fff
	.ui-widget-header
		background #c8a179;
		background linear-gradient(to top, #ba8e64, #d0af8b);
		box-shadow 1px 1px 0 0 rgba(0,0,0,.6)
		border none
		border-radius 3px 3px 0 0
	.ui-datepicker-title
		font-tahoma()
		font-size 13px
		line-height 32px
		color #fff
		font-weight 700
		text-shadow 0 -1px 0 rgba(0,0,0,.35)
	.ui-datepicker-calendar
		thead
			background-color #f7f4f0
			border-bottom 1px solid #f1ebe5
	.ui-datepicker
		th
			font-tahoma()
			font-size 12px
			color #2b2d30
			font-weight 700
			&.ui-datepicker-week-end
				color #990000
		td
			padding 0
			//calendar markers
			&.__complete
				.ui-state-default,
				.ui-state-disabled
					background-image images('sprites/marker-green.png')
					background-position center top
					background-repeat no-repeat
			&.__incomplete
				.ui-state-default,
				.ui-state-disabled
					background-image images('sprites/marker-red.png')
					background-position center top
					background-repeat no-repeat
	.ui-state-default,
	.ui-widget-content .ui-state-default
		padding 0
		border-color transparent
		font-tahoma()
		line-height 22px
		color #2b2d30
		text-align center
	.ui-state-disabled .ui-state-default,
	.ui-widget-content .ui-state-disabled,
	.ui-state-default
		opacity 1
		color #9498a1
		background-color #fdfcfb
	.ui-state-active,
	.ui-widget-content .ui-state-active
		background-color #f0e1c9
	.ui-state-highlight,
	.ui-widget-content .ui-state-highlight
		font-weight 700
		color #cc0000
		background #fdfcfb
	.ui-state-highlight.ui-state-active,
	.ui-widget-content .ui-state-highlight.ui-state-active
		font-weight 700
		color #cc0000
		background-color #f0e1c9
	.ui-datepicker-week-end .ui-state-default
		background-color #f7f4f0
		border 1px solid #f1ebe5
	.ui-datepicker-week-end .ui-state-active
		background-color #f0e1c9
		border 1px solid #f1ebe5