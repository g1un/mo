.accordion
	&-item
		margin-bottom 4px
		&:last-of-type
			padding-bottom 43px
			margin-bottom 0
	&-title
		padding 5px 10px 5px 0
		border-radius 3px
		border 1px solid #e1d6cb
		background linear-gradient(to top, #f7f4ef, #fcfcfc)
		font-open-sans-reg()
		font-size 18px
		line-height 1.2em
		color #333
		cursor pointer
		position relative
		&:before
			content ''
			position absolute
			top 50%
		&-image
			display inline-block
			vertical-align middle
			width 40px
			max-height 22px
			margin 0 10px
			text-align center
			img
				max-height 100%

